source :rubygems

gem "async-rack" # Collection of async-proof rack middlewares - https://github.com/rkh/async-rack.git
gem "cramp"       # for everything
gem "erubis"      # for rending simple views
gem "foreman"     # for rending simple views
gem "http_router" # Rack based routing  
gem "ohm"         # for redis
gem "thin"        # (NO IDEA) Async webserver for running a cramp application
gem "tweetstream" # duh
gem "yajl-ruby"   # for tweetstream

group :development do
  gem "heroku"
  gem "SystemTimer" # stop redis from whining
end

