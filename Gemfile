source :rubygems

gem "async-rack"  # Collection of async-proof rack middleware (https://github.com/rkh/async-rack.git)
gem "cramp"       # for everything
gem "erubis"      # for rendering the simple view
gem "foreman"     # for managing background worker processes smoothly
gem "http_router" # Rack based routing  
gem "ohm"         # for redis
gem "thin"        # (NO IDEA) Async webserver for running a cramp application
gem "tweetstream" # duh
gem "yajl-ruby"   # for tweetstream

group :development do
  gem "heroku"      # one-button deploys
  gem "SystemTimer" # stop redis from whining
end

